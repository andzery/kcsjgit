/*求任意一年中的某个月份的天数*/
/*要求月份及年号必须合法程序方可运行无误*/
#include "stdio.h"
 void main()
{int y,m,d,f=0;
 printf("请输入年及月份\n");
 scanf("%d%d",&y,&m);
 if(y%400==0||y%4==0&&y%100!=0)
   f=1;
 switch(m)
{case 2:if(f)d=29;else d=28;break;
 case 4:
 case 6:
 case 9:
 case 11:d=30;break;
 default:d=31;
}
 printf("%d年 %d月的天数是 %d天\n",y,m,d);
 }

